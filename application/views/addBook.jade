html
	head
		title #{title} | Book Store
		link(rel="stylesheet",href="/css/style.css")
		script(type="text/javascript", src="/js/common.js")
	body
	div.header
		p Book Store
	div.centerbox
		div.leftbar
			p Welcome #{currentUser}
			p #{title}
			p
				a(href="/adminlogin") Admin Login <br/>
				if currentUser !== 'Guest'
					a(href="/addbooks") Add books	
		div.contentbox
			form(name="addbook", method="post", action="/addbooks", enctype="multipart/form-data")
				p
					span Book Title:
					input(type="text", name="title")
				p
					span Author:
					input(type="text", name="author")
				p
					span ISBN:
					input(type="text", name="isbn")
				p
					span Description:
					input(type="textarea", name="description")
				p
					span Upload pdf:
					input(type="file", name="upload")					
				p
				input(type="submit", name="logging_in", value="Login")